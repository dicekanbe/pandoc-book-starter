{
  "filters": {
    "textlint-rule-preset-ja-technical-writing": true,
    "textlint-rule-preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": "always"
      }
    },
    "textlint-rule-prh": {
      "rulePaths": ["./prh.yml"]
    }
  },
  "rules": {
    "textlint-rule-preset-ja-technical-writing": {
      "no-exclamation-question-mark": false,
      "no-doubled-joshi": {
        "strict": false,
        "allow": ["も", "や", "か"]
      }
    }
  }
}
